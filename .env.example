# ===================================
# AI CHATBOT LMS - ENVIRONMENT CONFIG
# ===================================
# This is a template. Copy to .env and fill with actual values.

# Application
APP_NAME="AI Chatbot LMS"
APP_VERSION="1.0.0"
DEBUG=False
ENVIRONMENT="production"

# Server
HOST="0.0.0.0"
PORT=8000

# Security (CHANGE THESE!)
JWT_SECRET_KEY="your-super-secret-jwt-key-min-32-chars-CHANGE-THIS"
JWT_ALGORITHM="HS256"
JWT_EXPIRE_MINUTES=1440

# DeepSeek API (GET FROM: https://platform.deepseek.com)
DEEPSEEK_API_KEY="sk-xxxxxxxxxxxxxxxxxxxxx"
DEEPSEEK_API_BASE="https://api.deepseek.com/v1"
DEEPSEEK_MODEL="deepseek-chat"

# Qdrant Vector Database
# Option 1: Self-hosted
QDRANT_HOST="localhost"
QDRANT_PORT=6333
# Option 2: Qdrant Cloud (recommended)
# QDRANT_HOST="xxx-xxx.aws.cloud.qdrant.io"
# QDRANT_API_KEY="your-qdrant-api-key"

QDRANT_COLLECTION_FAQ_ID="faq_public_id"
QDRANT_COLLECTION_FAQ_EN="faq_public_en"

# AI Chat Database (SQLite)
AI_DB_PATH="./data/databases/ai_chat.db"

# LMS Database (PostgreSQL - READ ONLY)
LMS_DB_HOST="your-lms-db-host"
LMS_DB_PORT=5432
LMS_DB_NAME="lms_kampus"
LMS_DB_USER="chatbot_readonly"
LMS_DB_PASSWORD="your-readonly-password"

# Rate Limiting
RATE_LIMIT_PUBLIC=20
RATE_LIMIT_STUDENT=100
RATE_LIMIT_ADMIN=1000

# Embeddings
EMBEDDING_MODEL="sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2"

# Logging
LOG_LEVEL="INFO"
LOG_FILE="./logs/app.log"

# CORS (Add your domains)
CORS_ORIGINS=["https://kampusgratis.id", "https://admin.kampusgratis.id"]
